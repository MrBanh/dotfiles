// https://zed.dev/docs/configuring-zed

// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  // themes / color
  "icon_theme": "Catppuccin Mocha",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha (Blur)"
  },
  "experimental.theme_overrides": {
    "editor.document_highlight.bracket_background": "#ffffff00"
  },

  // font
  "buffer_font_family": "CodeNewRoman Nerd Font",
  "ui_font_family": "CodeNewRoman Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 16,

  // vim
  "vim_mode": true,
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_system_clipboard": "never",
    "use_smartcase_find": true,
    "use_multiline_find": true
  },

  //  editor behavior
  "extend_comment_on_newline": false,

  "assistant": {
    "version": "2",
    "button": false,
    "dock": "left"
  },

  "chat_panel": { "button": "never", "dock": "left" },

  "collaboration_panel": { "button": false, "dock": "left" },
  "tabs": {
    "file_icons": true
  },

  "gutter": {
    "code_actions": false
  },

  "outline_panel": {
    "button": false
  },

  "project_panel": {
    "dock": "right",
    "button": false
  },

  "scrollbar": {
    "show": "never"
  },

  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
    "show": false
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "wsl",
        "args": []
      }
    },
    "button": false
  },

  "toolbar": {
    "quick_actions": false,
    "selections_menu": false
  }
}
